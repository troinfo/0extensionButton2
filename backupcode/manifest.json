{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0",
  "description": "A simple Chrome extension",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html",
    "default_popup_width": 400, // specify your desired width
    "default_popup_height": 200 // specify your desired height
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ]
}
